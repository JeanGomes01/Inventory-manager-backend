generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  products  Product[]
  movements Movement[]
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  quantity    Int
  price       Float
  clientId    Int?
  categoryId  Int?
  movements   Movement[]
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
}

model Movement {
  id        Int      @id @default(autoincrement())
  productId Int
  type      String
  quantity  Int
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
